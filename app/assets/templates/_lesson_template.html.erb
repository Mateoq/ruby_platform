<div class="row pr-lesson-title-row">
	<div class="col-md-12 pr-lesson-title-bar">
		<div class="pr-icon pr-icon-circle-audio no-shadow pr-lesson-audio" ng-click="playLessonAudio()"></div>
		<div class="pr-lesson-title-bar-label">
			<h3>{{options.lessonName}}<span ng-if="options.lessonTitle">.</span></h3> <span>{{options.lessonTitle}}</span>
		</div>
		<div class="hidden-xs pr-lesson-title-bar-thin"></div>
		<div class="pr-icon pr-icon-click-here small animated bounceInLeft small-click-here" ng-if="options.slideScreenOn && !options.isEvidence"></div>
		<div class="pr-icon pr-icon-circle-zoom-in pr-slide-screen-icon" ng-if="options.slideScreenOn && !options.isEvidence" ng-click="toggleScreen()"></div>
		<div class="pr-slide-screen" ng-if="options.slideScreenOn">
			<div class="container-fluid">
				<div class="pr-slide-screen-tools">
					<div class="pr-icon pr-icon-circle-zoom-in" ng-click="toggleWideScreen()"></div>
					<div class="pr-icon  pr-icon-circle-zoom-out" ng-click="toggleScreen()"></div>
				</div>
				<div class="row pr-lesson-title-row">
					<div class="col-md-12 pr-lesson-title-bar">
						<div class="pr-icon pr-icon-circle-audio no-shadow" ng-if="!options.pdfUrl"></div>
						<div class="pr-icon pr-icon-circle-pdf no-shadow" ng-if="options.pdfUrl"></div>
						<div class="pr-lesson-title-bar-label">
							<span>{{options.slideScreenTitle}}</span>
						</div>
						<div class="pr-lesson-title-bar-thin"></div>
					</div>
				</div>
				<div class="row pr-slide-screen-content" style="{{options.stylesScreenContent}}" ng-class="{'pdf': options.pdfUrl}">
					<div class="col-md-12 image-content" ng-if="options.slideScreenImage" style="{{options.stylesScreenImage}}" ng-if="2 != options.type">
						<img ng-src="{{$root.resources + options.slideScreenImage}}" alt="options.slideScreenAlt">
					</div>
                    <div class="col-md-12 pdf-content" ng-if="2 === options.type && !options.isEvidence">
                        <iframe ng-src="{{options.pdfUrl}}" frameborder="0"></iframe>
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="container pr-lesson-content {{options.templateClass}}">
	<ng-transclude-replace></ng-transclude-replace>
	<div class="pr-images-info-images" style="{{image.styles}}" ng-repeat="image in options.images" ng-if="options.images">
		<img ng-src="{{$root.resources}}{{image.src}}" alt="{{image.alt}}" style="{{image.imageStyles}}">
	</div>
</div>
<div class="pr-lesson-footer" style="background-color: {{options.footerBackground}}; height: {{options.footerHeight}};" ng-class="{'evidence': options.isEvidence}"></div>
<ng-include ng-if="$root.activeMessage" src="'_congrats_message.html'"></ng-include>
<div class="pr-slide-screen-black" ng-class="{'active': $root.activeMessage}"></div>