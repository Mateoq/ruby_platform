<!-- Main structure for containers with content or instruction. Can be both of them -->
<div class="pr-content-container shadow-effect-1 {{options.containerClasses}}" style="{{options.styles}}" ng-class="{'small-title': options.hasSmallTitle, 'no-shadow': options.noShadow}">
	<!-- Content container, available when property hasContent is true -->
	<div class="pull-left pr-left-container" ng-if="options.hasContent" style="{{options.contentStyles}}" class="{{options.contentClasses}}">
		<!-- Header can be an static one, or a button with an click event -->
		<div class="pr-content-header {{options.headerClasses}}" style="{{options.contentHeaderStyles}}" ng-if="options.hasHeader && !options.headerButton">
			<div class="pr-content-icon" style="{{options.stylesContentIcon}}">
				<div class="pr-icon {{options.contentIcon}}"></div>
			</div>
			<div class="pr-content-title {{options.contentTitleClasses}}" style="{{options.contentTitleStyles}}">{{options.title}}</div>
		</div>

		<button class="pr-content-header {{options.headerClasses}}" style="{{options.contentHeaderStyles}}" ng-if="options.hasHeader && options.headerButton" ng-click="options.onHeaderClick(options.headerButton, $event)" data-target="{{options.contentMainClass}}">
			<div class="pr-content-icon" style="{{options.stylesContentIcon}}">
				<div class="pr-icon {{options.contentIcon}}"></div>
			</div>
			<div class="pr-content-title" style="{{options.contentTitleStyles}}">{{options.title}}</div>
		</button>
	
		<div class="pr-content-main {{options.contentMainClasses}}" ng-class="{'content-highlighted': options.contentHighlighted, 'content-no-header': !options.hasHeader, 'body-event': options.hasBodyEvent}" style="{{options.contentMainStyles}}" ng-click="options.onbodyContentClick(options.containerOptions, $event)" data-target="{{options.contentMainClass}}">
			<div class="pr-opensans-light-font pr-content-main-text" ng-bind-html="options.text"></div>
			<div class="pull-left pr-content-main-extra {{options.contentMainClass}}" style="{{options.contentMain.styles}}">
				<div class="pr-content-image-container" style="{{options.main.imageContainer.styles}}">
					<div class="{{options.main.imageContainer.containerClasses}}" style="{{options.main.imageContainer.containerStyles}}">
						<div class="pr-block" ng-if="options.main.image.animation"></div>
						<img ng-src="{{$root.resources + options.main.image.src}}" alt="{{options.main.alt}}" ng-if="options.main.image" class="img-responsive pr-content-image" style="{{options.main.image.styles}}">
					</div>
				</div>
				<ul class="list-unstyled pr-list-with-items pr-content-list" ng-if="options.main.listItems">
				    <li ng-repeat="listItem in options.main.listItems" style="{{listItem.style}}">
				    	{{listItem.text}}
				    </li>
				</ul>
				<p class="pr-content-bottom-text" ng-if="options.main.bottomText" style="{{options.main.bottomText.styles}}">
					{{options.main.bottomText.text}}
				</p>
				<pr-video-player options="options.main.video" ng-if="options.main.video && !options.main.empty"></pr-video-player>
			</div>
		</div>
	</div>

	<!-- Instruction container, available when property hasInstruction is true -->
	<div class="pull-left pr-content-instruction {{options.instructionClasses}}" ng-if="options.hasInstruction" style="{{options.instructionStyles}}">
		<div class="pr-content-instruction-row {{options.instructionBg}}">
			<div class="pr-content-instruction-icon">
				<div class="{{options.iconInstruction}}"></div>
			</div>
			<div class="pr-content-instruction-text" ng-bind-html="options.instruction"></div>
		</div>
	</div>

	<!-- Extra content container, available when property hasExtra is true -->
	<div class="pr-content-extra-content {{options.extraContent.classes}}" ng-if="options.hasExtra" style="{{options.extraContent.styles}}">
		<div class="pr-content-extra-row" ng-repeat="row in options.extraContent.rows">
			<div class="{{item.classes}} pr-content-extra-col" style="{{item.styles}}" ng-repeat="item in row.items" ng-if="options.showExtraContent" ng-class="{'animated bounceIn': options.showExtraContent}">
				<img class="img-responsive content-image {{item.image.classes}}" style="{{item.image.styles}}" ng-src="{{$root.resources + item.image.src}}" alt="{{item.image.alt}}" ng-if="item.image">
				<span class="content-text {{item.text.classes}}" style="{{item.text.styles}}" ng-bind-html="item.text.text" ng-if="item.text"></span>
				<ul class="content-list {{item.list.classes}}" style="{{item.list.styles}}" ng-if="item.list">
					<li class="content-list-item {{item.list.itemClasses}}" style="{{item.list.itemStyles}}" ng-repeat="li in item.list.items" ng-bind-html="li"></li>
				</ul>
				<pr-video-player options="item.video" ng-if="item.video"></pr-video-player>
			</div>
		</div>
	</div>
</div>