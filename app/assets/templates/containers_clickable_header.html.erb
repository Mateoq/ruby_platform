<lesson-template options="options">
	<div class="col-md-8 center-block cch-instruction-container">
		<content-containers options="options.instruction"></content-containers>
	</div>
	<content-carousel carousel-items="options.containers" class="col-md-12">
		<div class="item ccar-item" ng-repeat="items in options.containers">
			<div ng-repeat="item in items">
				<content-containers options="item">
					<img ng-src="{{$root.resources + options.main.image}}" alt="{{options.main.alt}}" ng-if="options.main.image" class="cch-containers-image">
					<ul class="cch-containers-list" ng-if="options.main.listItems">
					    <li ng-repeat="listItem in options.main.listItems">
					    	{{listItem}}
					    </li>
					</ul>
					<p class="cch-containers-bottom-text" ng-if="options.main.bottomText">
						{{options.bottomText}}
					</p>
				</content-containers>
			</div>
	    </div>
	</content-carousel>
</lesson-template>