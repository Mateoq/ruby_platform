<div ng-if="options.showContent" class="cch-containers-main" ng-class="{'visible': options.showContent}">
	<!-- Asset: image/gif -->
	<div class="cch-containers-image-container" style="{{options.main.imageContainer.styles}}">
		<div class="{{options.main.imageContainer.containerClasses}}" style="{{options.main.imageContainer.containerStyles}}">
			<div class="cch-block" ng-if="options.hasHeader && !options.bodyEvent && options.main.image.animation"></div>
			<!-- <img data-gifffer="{{$root.resources + options.main.animation.src}}" alt="{{options.main.alt}}" class="img-responsive anslide-animation {{options.main.animation.classes}}" style="{{options.main.animation.styles}}" ng-if="!$parent.$parent.$parent.options.done && options.main.animation">
			<img ng-src="{{$root.resources + options.main.animation.src}}" alt="{{options.main.alt}}" class="img-responsive anslide-animation {{options.main.animation.classes}}" style="{{options.main.animation.styles}}" ng-if="options.main.animation && $parent.$parent.$parent.options.done"> -->
			<img ng-src="{{$root.resources + options.main.image.src}}" alt="{{options.main.alt}}" ng-if="options.main.image" class="img-responsive cch-containers-image" style="{{options.main.image.styles}}">
		</div>
	</div>
	<!-- Asset: unordered list -->
	<ul class="list-unstyled pr-list-with-items cch-containers-list" ng-if="options.main.listItems">
	    <li ng-repeat="listItem in options.main.listItems">
	    	{{listItem.text}}
	    </li>
	</ul>
	<!-- Asset: ordered list -->
	<div class="cch-order-list {{options.main.orderList.classes}}" style="{{options.main.orderList.styles}}" ng-if="options.main.orderList">
		<div class="row cch-order-list-row" ng-repeat="item in options.main.orderList.items">
			<div class="col-md-2 cch-order-list-key {{item.keyClasses}}" style="{{item.keyStyles}}">
				<span ng-bind-html="item.key"></span>
			</div>
			<div class="col-md-10 cch-order-list-value {{item.valueClasses}}" style="{{item.valueStyles}}" ng-bind-html="item.value"></div>
		</div>
	</div>

	<!-- Asset: video/animation -->
	<pr-video-player options="options.main.video" ng-if="options.main.video"></pr-video-player>

	<!-- Asset: phaser animation -->
	<div id="{{options.contentMainClass}}" class="cch-phaser-animation {{options.main.phaser.classes}}" style="{{options.main.phaser.styles}}"></div>

	<!-- Asset: form list -->
	<div class="cch-form-list {{options.main.formList.classes}}" style="{{options.main.formList.styles}}" ng-if="options.main.formList">
		<div class="row cch-form-list-row" ng-repeat="item in options.main.formList.items">
			<div class="cch-form-list-key {{item.key.classes}}" style="{{item.key.styles}}" ng-bind-html="item.key.value"></div>
			<div class="cch-form-list-text {{item.text.classes}}" style="{{item.text.styles}}" ng-bind-html="item.text.value"></div>
			<div class="cch-form-list-input {{item.input.classes}}" style="{{item.input.styles}}">
				<input type="text" ng-model="item.input.value" ng-enter="options.validate($event, item.input)" ng-blur="options.validate($event, item.input)" class="animated" ng-disabled="item.input.disabled", ng-class="{'on-validation': item.input.validated}" style="{{item.input.stylesInput}}">
        		<div class="pr-icon {{item.input.classIcon}} pr-icon-validation cch-form-list-icon" style="{{options.input.stylesIcon}}" ></div>
			</div>
		</div>
	</div>

	<!-- Asset: paragraph -->
	<p class="cch-containers-bottom-text" ng-if="options.main.bottomText">
		{{options.bottomText.text}}
	</p>
</div>

