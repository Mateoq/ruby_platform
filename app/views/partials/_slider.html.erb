<!-- SLIDER -->
<div class="pr-slider" ng-mouseenter="$root.showSlider($event)" ng-mouseleave="$root.hideSlider($event)">
    <% if @course_structure[:pr_type] != 0 %>
        <div class="pr-icon pr-icon-tiny-up-arrow toggler-slider-icon"></div>
        <div class="menu-slider">
            <!-- Go to previous activity -->
            <div ng-click="goPrev()" ng-class="{'disabled': !$root.isBackEnabled}" class="menu-slider-arrow"></div>

            <div appm-slider data-appm-slider class="hidden-xs menu-slider-container">
                <div class="menu-slider-bg"></div>
                <div class="menu-slider-content">
                    <%= render "partials/slider_navbar" %>
                </div>
            </div>

            <!-- Go to next activity -->
            <div ng-click="goNext()" ng-class="{'disabled': !$root.isNextEnabled}" class="menu-slider-arrow inverted"></div>
        </div>
    <% end %>
</div>